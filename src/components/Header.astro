---
import ButtoWhatsapp from "./ButtoWhatsapp.astro";
---

<header>
  <div id="logo-container">
    <a href="/" aria-label="Go to homepage">
      <img
        src="../img/iconoTkuido.png"
        alt="TKUIDO"
        width="100"
        height="100"
      />
    </a>
    <h1>TKUIDO</h1>
  </div>

  <div id="navbar-inicio">
    <nav class="navbar">
      <label class="labe_hamburguesa" for="menu_hamburguesa">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="35"
          height="35"
          fill="currentColor"
          class="list_icon"
          viewBox="0 0 16 16"
        >
          <path
            fill-rule="evenodd"
            d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"
          ></path>
        </svg>
      </label>

      <input
        class="menu_hamburguesa"
        type="checkbox"
        name=""
        id="menu_hamburguesa"
      />
      <ul class="ul-links">
        <li class="li-link">
          <a class="links" href="/">Inicio</a>
        </li>
        <li class="li-link">
          <a class="links" href="/#noticias-container">Noticias</a>
        </li>
        <li class="li-link">
          <a class="links" href="/#servicio-container">Servicios</a>
        </li>
        <li class="li-link">
          <a class="links" href="/#polizas-container">Productos</a>
        </li>
        <li class="li-link">
          <a class="links" href="/#nosotro-container">Nosotros</a>
        </li>
        <li class="li-link">
          <a class="links" href="/#contacto-container">Contáctanos</a>
        </li>
      </ul>
    </nav>

    <a class="register" href="https://forms.gle/nCQkFpJuwbbZVxD56" target="_blank" rel="noopener">
      <button class="register-boton">Regístrate</button>
    </a>
  </div>
</header>

<style>
  header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px;
    height: 80px;
    margin-left: calc(100vw - 98%);
    margin-right: calc(100vw - 98%);
  }
  #logo-container {
    display: flex;
    align-items: center;
    /*margin-right: auto;*/
  }
  #logo-container img {
    height: 70px;
    width: 70px;
  }

  #logo-container h1 {
    font-size: 2rem;
    font-weight: 600;
    color: #111406;
    margin-left: 10px;
  }
  #navbar-inicio {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
  }
  .navbar {
    display: flex;
  }
  .labe_hamburguesa,
  .menu_hamburguesa {
    display: none;
  }
  .ul-links {
    display: flex;
    justify-content: space-between;
    align-items: center;
    /*width: 25%;*/
    gap: 16px;
    margin-right: 20px;
  }
  .links {
    transition: all 0.3s;
    color: #111406;
    font-weight: 600;
  }
  .links:hover {
    font-size: 18px;
  }

  .register-boton {
    background-color: #6bb580;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 20px;
    cursor: pointer;
    transform: all 0.5s ease;
    font-weight: 600;
    display: flex;
    align-items: center;
    margin-left: 20px;
  }

  .register-boton:hover {
    background-color: #128c7e;
  }

  @media (max-width: 769px) {
    header {
      display: grid;
      grid-template-columns: 45% 55%;
      padding: 0;
      height: 80px;
      margin-left: 20px;
      margin-right: 20px;
    }
    #logo-container img {
      height: 50px;
      width: 50px;
    }

    #logo-container h1 {
      font-size: 1.2rem;
    }
    #navbar-inicio {
      display: grid;
      grid-template-columns: 20% 80%;
      justify-items: center;
    }
    /**BURGUER MENU */
    .navbar {
      height: 100%;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      padding: 0;
      z-index: 4;
    }
    .menu_hamburguesa {
      display: none;
    }
    .menu_hamburguesa:checked + .ul-links {
      height: max-content;
      padding: 2rem 0;
    }
    .logo {
      color: #000;
    }
    .labe_hamburguesa {
      display: block;
    }
    .list_icon {
      color: #000;
      cursor: pointer;
    }
    .ul-links {
      width: 100%;
      background-color: #e3e7e4;
      position: absolute;
      top: 80px;
      left: 0;
      height: 0;
      overflow: hidden;
      /* height: calc(100vh - 80px); */
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 2rem;
      border-radius: 0 0 20px 20px;
      transition: all 0.3s;
    }
    .li-link {
      display: inline;
    }
    .links {
      font-size: 1em;
      color: #000;
      font-weight: bold;
    }
  }
</style>
