---
interface Props {
  ruta: string;
}

const { ruta } = Astro.props;
---

<a href={ruta}>
  <button>
    <img src="/img/icons/arrowLeft.png" alt="Voler pÃ¡gina anterior" />
    Volver
  </button>
</a>

<style>
  a {
    position: relative;
    margin-top: 20px;
    display: block;
    margin-left: calc(100vw - 97%);
  }
  button {
    display: flex;
    align-items: center;
    gap: 10px;
    background-color: #6bb580;
    color: white;
    padding: 10px 20px;
    border-radius: 5px;
    font-weight: 600;
    cursor: pointer;
  }
  button img {
    width: 20px;
    height: 20px;
  }

  button:hover {
    background-color: #128c7e;
  }

  @media (max-width: 769px) {
    a {
      position: fixed;
      bottom: 50px;
      background-color: #f0f9f2;
      border-radius: 5px;
      margin-left: 0;
      padding: 5px;
      padding-left: calc(100vw - 99%);
      -webkit-box-shadow: 6px 10px 14px 0px rgba(0, 0, 0, 0.44);
      box-shadow: 6px 10px 14px 0px rgba(0, 0, 0, 0.44);
    }
  }
</style>
